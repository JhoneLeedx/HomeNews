<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="20dp"
    app:contentPadding="10dp"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_nba_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NBA常规赛:03/08 09:30"
            android:padding="5dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_nba_play1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/okc"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:padding="10dp"
                android:text="雷霆" />

            <TextView
                android:id="@+id/tv_nba_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:padding="20dp"
                android:textColor="@android:color/darker_gray"
                android:text="126-121" />

            <TextView
                android:id="@+id/tv_nba_play2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ktz"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:padding="10dp"
                android:text="开拓者" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:focusable="true"
                android:id="@+id/tv_nba_jstj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_toStartOf="@+id/tv_nba_spjj"
                android:background="@drawable/btn_shap"
                android:textColor="@android:color/white"
                android:layout_marginRight="10dp"
                android:text="技术统计"/>
            <TextView
                android:focusable="true"
                android:id="@+id/tv_nba_spjj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/btn_shap"
                android:textColor="@android:color/white"
                android:text="视频集锦"/>
        </RelativeLayout>
    </LinearLayout>
    <!--cardElevation设置阴影-->
</android.support.v7.widget.CardView>